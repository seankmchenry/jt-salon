{
  "name" : "tincupdigital/jessicatodd",
  "description" : "WordPress project for Jessica Todd Salon site",
  "type" : "project",
  "license" : "MIT",
  "config": {
    "vendor-dir": "packages"
  },
  "repositories": [
    {
      "type": "composer",
      "url": "http://wpackagist.org"
    }
  ],
  "require": {
    "php": ">=5.4",
    "johnpbloch/wordpress": "*",
    "wpackagist-plugin/force-regenerate-thumbnails": "*",
    "wpackagist-plugin/imsanity": "*",
    "wpackagist-plugin/simple-page-sidebars": "*",
    "composer/installers": "~1.0",
    "roots/soil": "3.7.1"
  },
  "extra": {
    "installer-paths": {
      "content/plugins/{$name}": ["type:wordpress-plugin"],
      "content/mu-plugins/{$name}" : ["type:wordpress-muplugin"],
      "content/themes/{$name}": ["type:wordpress-theme"]
    },
    "wordpress-install-dir": "wp"
  }
}
